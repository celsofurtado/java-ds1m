package circulo;

public class Circulo {
	
	public static void main(String[] args) {
		
		float PI = 3.14f;
		float raio = 8.0f;
		
		float area = (raio * raio) * PI;
		
		System.out.print("Área: ");
		System.out.println(area);
		System.out.print("Raio do círculo: ");
		System.out.println(raio);
		
		
	}

}
